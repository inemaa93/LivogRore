<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LivogRøre</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LivogRøre.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="text-resizable">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand text-resizable" asp-area="" asp-controller="Home" asp-action="Index">LivogRøre</a>
            <button id="fontSizeToggle" class="btn btn-outline-primary text-resizable me-2">Større tekst</button>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <a class="nav-link text-dark text-resizable" asp-controller="Home" asp-action="UserHome">Home</a>
                    }
                    else
                    {
                        <a class="nav-link text-dark text-resizable" asp-controller="Home" asp-action="Index">Home</a>
                    }
                    <li class="nav-item">
                        <a class="nav-link text-dark text-resizable" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>

                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark text-resizable" asp-controller="Event" asp-action="Create">Opprett arrangement</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark text-resizable" asp-controller="Event" asp-action="MyEvents">Mine arrangementer</a>
                        </li>
                    }

                    @if (User.IsInRole("Admin") || User.IsInRole("Company"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark text-resizable" asp-controller="AdminPage" asp-action="Admin">Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark text-dark text-resizable" asp-controller="AdminPage" asp-action="Users">Manage Users</a>
                        </li>
                    }
                </ul>
                <div class="d-flex align-items-center">
                    <form asp-controller="Event" asp-action="Index" method="get" class="me-2">
                        <select name="locationId" class="form-select text-resizable" onchange="this.form.submit()">
                            <option value="">Alle byer</option>
                            @foreach (var location in ViewBag.AvailableLocations ?? new List<Location>())
                            {
                                <option value="@location.Id" selected="@(ViewBag.SelectedLocationId == location.Id)">
                                    @location.City - @location.Name
                                </option>
                            }
                        </select>
                    </form>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3 text-resizable">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        <span class="footer-copyright">&copy; 2025 - LivogRøre - </span>
        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="footer-privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<!-- Legg til vår skriftstørrelse-funksjonalitet -->
<script src="~/js/fontSizeToggle.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
