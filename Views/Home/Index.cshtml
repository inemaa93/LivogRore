@model User

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/styles.css">
</head>

<link rel="icon" type="image/x-icon" href="/Livogrøre_logo.png">


<div class="container">
    <div class="grid-layout">
        <div class="text-content">
            <h1 class="display-4" style="color: white;">Liv og Røre</h1>
            <p style="color: white;">Velkommen til Liv og Røre. Vi tilbyr en platform for eldre med eventer i nærområdet. For å bli med, logg inn eller lag bruker, trykk på knappene nedenfor!</p>

            <div class="d-flex justify-content-center mt-4 flex-wrap">
                <a class="button me-3" asp-area="Identity" asp-page="/Account/Register">Register</a>

                <a class="button me-3" asp-area="Identity" asp-page="/Account/Login">Login</a>

                <a class="button me-3" href="#">Meld deg på!</a>

                <a class="button me-3" href="#" id="moreInfoBtn">Mer informasjon</a>
                

            </div>
            <div id="moreInfoSection" style="display: none; margin-top: 2rem; padding: 2rem; background-color: #fff; border-radius: 20px; border: none; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); max-width: 700px; margin-left: auto; margin-right: auto;">
                <h2 style="color: #2c2c2c; font-size: 1.8rem; margin-bottom: 1rem; font-weight: 700; letter-spacing: -0.5px;">Hva handler denne nettsiden om?</h2>
    
                <p style="font-size: 1.1rem; color: #333; line-height: 1.6;">
                    <strong>Liv og Røre</strong> er en plattform laget for å hjelpe ensomme eldre med å finne sosiale arrangementer i sitt nærområde. Brukere kan filtrere arrangementer etter by og enkelt melde seg på aktiviteter.
                </p>
    
                <p style="font-size: 1.1rem; color: #333; line-height: 1.6;">
                    Bedrifter og organisasjoner kan også opprette større arrangementer som bidrar til fellesskap og glede blant eldre.
                </p>
    
                <p style="font-size: 1.1rem; color: #333; line-height: 1.6;">
                    Målet vårt er å skape en trygg, inkluderende møteplass på nett for alle eldre som ønsker å delta i fellesskapet.
                </p>
            </div>


        </div>

        <div class="image-content">
            <img src="lor.png" alt="Logo for Liv og Røre">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/scripts/scripts.js"></script>
    <script>
    document.getElementById('moreInfoBtn').addEventListener('click', function (event) {
        event.preventDefault();
        const infoSection = document.getElementById('moreInfoSection');
        if (infoSection.style.display === 'none') {
            infoSection.style.display = 'block';
        } else {
            infoSection.style.display = 'none';
        }
    });
</script>

}